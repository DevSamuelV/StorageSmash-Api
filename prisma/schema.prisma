generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model referal {
  code    String @unique
  expires String
}

model ServerQueue {
  waiting String

  serverId    String  @unique
  serverImage String
  name        String
  port        Int
  ip          String
  memory      Int
  uid         String
  gamemode    String
  maxPlayers  Int
  world       String
  seed        String
  online      Boolean
  pending     Boolean @default(true)
}

model MinecraftServer {
  serverId    String  @unique
  serverImage String
  name        String
  port        Int
  ip          String
  memory      Int
  uid         String
  gamemode    String
  maxPlayers  Int
  world       String
  seed        String
  online      Boolean
  pending     Boolean @default(true)
}

model User {
  uid      String @unique
  username String
  email    String
  photoURL String
}
