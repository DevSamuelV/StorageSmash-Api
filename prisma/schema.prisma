generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Referal {
  code      String   @unique
  percent   Int
  expires   String
  createdAt DateTime @default(now())
}

model ServerQueue {
  waiting     String
  id          String   @unique @default(uuid())
  serverId    String   @unique
  serverImage String
  name        String
  port        Int?
  rconPort    Int?
  ip          String
  memory      Int
  uid         String
  gamemode    String
  maxPlayers  Int
  world       String?
  seed        String?
  online      Boolean
  pending     Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model MinecraftServer {
  serverId    String   @unique
  serverImage String
  name        String
  port        Int?
  rconPort    Int?
  ip          String
  memory      Int
  uid         String
  gamemode    String
  maxPlayers  Int
  world       String?
  seed        String?
  online      Boolean
  pending     Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model User {
  uid       String   @unique
  username  String
  email     String
  photoURL  String
  createdAt DateTime @default(now())
}
